<%= form_for(Recipe.new) do |f| %>
  <div class="recipe_name">
    <%= f.label :name %><br />
    <%= f.text_field :name %><br />
  </div>
  
  <div class="recipe_description">
    <%= f.label :description %><br />
    <%= f.text_field :description %><br />
  </div>
  
  <div class="action">
    <%= f.submit %>
  </div>
<% end %>
