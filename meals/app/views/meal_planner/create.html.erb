<%= form_for(Recipe.new) do |f| %>
  <div class="recipe_name">
    <%= f.label :name %><br />
    <%= f.text_field :name %><br />
  </div>
  
  <div class="recipe_description">
    <%= f.label :description %><br />
    <%= f.text_area :description %><br />
  </div>

  Ingredients:<br/>   
  <%= f.fields_for :ingredient do |ingredient| %>
    <% (1..7).each do |_| %>
      <%= ingredient.fields_for :name do |array| %>
        <%= array.text_field "" %></br>
      <% end %>
    <% end %>
  <% end %>


  <div class="action">
    <%= f.submit %>
  </div>
<% end %>
